{
  "name": "Normal Tab Size",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Set the default tab-size CSS property to 2 in every page",
  "homepage_url": "https://github.com/slikts/normaltabs",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "all_frames": true,
      "css": [
        "src/inject.css"
      ]
    }
  ]
}